{% extends template('widget') %}

{% define data = {
    form: _widget.cartCodeForm,
    isQuoteEditable: _widget.isQuoteEditable
} %}

{% block body %}
    {% if data.isQuoteEditable %}
        {# TODO: fix glossary #}
        {% include molecule('form') with {
            modifiers: ['inline'],
            data: {
                form: data.form,
                submit: {
                    enable: true,
                    text: 'cart.voucher.redeem' | trans,
                    icon: 'gift',
                    class: 'button'
                },
                options: {
                    action: path('cart-code/code/add')
                }
            }
        } only %}
    {% endif %}
{% endblock %}
